{
	"name": "wd_s",
	"version": "3.0.0",
	"private": true,
	"description": "A starter theme from WebDevStudios.",
	"author": "WebDevStudios <contact@webdevstudios.com>",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"WordPress",
		"Theme"
	],
	"homepage": "https://github.com/WebDevStudios/wd_s/#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/WebDevStudios/wd_s.git"
	},
	"bugs": {
		"url": "https://github.com/WebDevStudios/wd_s/issues"
	},
	"engines": {
		"node": ">=14",
		"npm": ">=7"
	},
	"devDependencies": {
		"@arkweid/lefthook": "^0.7.7",
		"@tailwindcss/nesting": "*",
		"@wordpress/eslint-plugin": "^12.3.0",
		"@wordpress/prettier-config": "^1.3.0",
		"@wordpress/scripts": "^23.1.0",
		"autoprefixer": "^10.4.7",
		"browser-sync": "^2.27.10",
		"chokidar-cli": "^3.0.0",
		"cross-env": "^7.0.3",
		"css-loader": "^6.7.1",
		"cssnano": "^5.1.9",
		"esbuild": "^0.14.39",
		"esbuild-postcss": "^0.0.4",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"glob": "^7.2.3",
		"imagemin": "^7.0.1",
		"imagemin-gifsicle": "^7.0.0",
		"imagemin-jpegtran": "^7.0.0",
		"imagemin-pngquant": "^9.0.2",
		"imagemin-svgo": "^10.0.0",
		"imagemin-webp": "^6.0.0",
		"mini-css-extract-plugin": "^2.6.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.14",
		"postcss-cli": "^9.0.1",
		"postcss-loader": "^7.0.0",
		"postcss-preset-env": "^7.6.0",
		"postcss-strip-inline-comments": "^0.1.5",
		"prettier": "npm:wp-prettier@^2.6.2-beta-1",
		"rimraf": "^3.0.2",
		"stylelint-config-prettier": "^9.0.3",
		"svgo": "^2.7.0",
		"svgstore-cli": "^2.0.0",
		"sync-directory": "^5.0.8",
		"tailwindcss": "^3.0.24"
	},
	"scripts": {
		"build": "npm run clean && run-s build:*",
		"build:esbuild": "node esbuild.js",
		"build:fonts": "[ -d src/fonts ] && syncdir src/fonts build/fonts -c -do --quiet || echo 'src/fonts does not exist.'",
		"build:tailwind": "postcss src/css/tailwind.css -o build/tailwind.css",
		"build:images": "node imagemin.js",
		"build:svg": "svgo -f src/images/icons -o build/images/icons",
		"build:sprite": "svgstore src/images/icons/*.svg -o build/images/icons/sprite.svg --inline",
		"build:pot": "composer run-script pot",
		"clean": "rimraf build",
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"format": "run-p format:*",
		"format:css": "npx prettier '**/*.css' --write && npm run lint:css -- --fix",
		"format:js": "wp-scripts format && npm run lint:js -- --fix",
		"format:md": "npx markdownlint-cli . --fix",
		"format:php": "composer run-script format",
		"lint": "run-p lint:*",
		"lint:css": "wp-scripts lint-style '**/*.css'",
		"lint:js": "wp-scripts lint-js",
		"lint:md": "wp-scripts lint-md-docs",
		"lint:php": "composer run-script lint",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"packages-update": "wp-scripts packages-update",
		"postinstall": "composer install --quiet && npm run build",
		"start": "run-p watch:*",
		"sync": "browser-sync start --https --proxy 'https://wdunderscores.test' --no-open --files 'build/*.*, **/*.html, **/*.php, !node_modules/**/*.html'",
		"watch": "run-p watch:* sync",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tailwind": "npm run build:tailwind -- -w",
		"watch:fonts": "npm run build:fonts -- -w",
		"watch:svg": "chokidar 'src/images/icons/' -c 'run-s build:svg build:sprite'",
		"watch:images": "syncdir src/images build/images -c -do -w --quiet",
		"watch:imagemin": "chokidar 'src/images/**/*' -c 'npm run build:images --watch'"
	}
}
