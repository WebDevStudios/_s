{
  "name": "wd_s",
  "version": "2.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "build": "wp-scripts build && npm run theme",
    "format:js": "wp-scripts format-js",
    "lint:js": "wp-scripts lint-js",
    "packages-update": "wp-scripts packages-update",
    "start": "wp-scripts start",
    "postinstall": "npm run build",
    "lint": "npm run lint:js && npm run lint:style && npm run lint:php",
    "lint:php": "composer install --quiet && composer run lint",
    "lint:style": "wp-scripts lint-style",
    "theme": "run-s pot icons",
    "pot": "wp i18n make-pot . build/languages/_s.pot --exclude=node_modules,vendor,build",
    "icons": "svgstore build/images/icons/*.svg --inline -o build/images/icons/sprite.svg",
    "format": "prettier '**/*.{js,jsx,ts,tsx}' --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@webdevstudios/css-coding-standards": "^1.0.1",
    "@webdevstudios/js-coding-standards": "~1.2.2",
    "@wordpress/scripts": "~12.3.0",
    "copy-webpack-plugin": "^6.1.1",
    "cssnano": "^4.1.10",
    "imagemin-webpack-plugin": "^2.4.2",
    "svgstore-cli": "^2.0.0",
    "tailwindcss": "^1.8.0"
  },
  "eslintConfig": {
    "extends": "@webdevstudios/js-coding-standards"
  },
  "prettier": "@webdevstudios/prettier-config-coding-standards"
}
