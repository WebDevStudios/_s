{
  "name": "wd_s",
  "version": "2.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "build": "wp-scripts build && npm run theme",
    "format:js": "eslint --fix .",
    "format:style": "stylelint --fix **/*.{css,scss}",
    "icons": "svgstore build/images/icons/*.svg --inline -o build/images/icons/sprite.svg",
    "lint": "run-s lint:js lint:style lint:php",
    "lint:js": "run-s format:js && wp-scripts lint-js",
    "lint:php": "composer install --quiet && composer run lint",
    "lint:style": "run-s format:style && wp-scripts lint-style",
    "packages-update": "wp-scripts packages-update",
    "postinstall": "npm run build",
    "pot": "wp i18n make-pot . build/languages/_s.pot --exclude=node_modules,vendor,build",
    "start": "wp-scripts start",
    "theme": "run-s pot icons"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@webdevstudios/css-coding-standards": "^1.0.1",
    "@webdevstudios/js-coding-standards": "~1.3.0",
    "@wordpress/scripts": "~12.3.0",
    "copy-webpack-plugin": "^6.1.1",
    "cssnano": "^4.1.10",
    "imagemin-webpack-plugin": "^2.4.2",
    "npm-run-all": "~4.1.5",
    "run-s": "0.0.0",
    "svgstore-cli": "^2.0.0",
    "tailwindcss": "^1.8.0"
  },
  "eslintConfig": {
    "extends": "@webdevstudios/js-coding-standards",
    "ignorePatterns": [
      "**/*.css",
      "**/*.json",
      "**/*.lock",
      "**/*.php",
      "**/*.png",
      "**/*.scss",
      "**/*.svg",
      "*.min.js",
      ".*dist.js",
      ".*rc.js",
      "./.*.js",
      ".cache/**/*",
      ".git*",
      "build/**/*",
      "cache/**/*",
      "dist/**/*",
      "inc/customizer/assets/scripts/livepreview.js",
      "inc/customizer/assets/scripts/tinymce.js",
      "node_modules/**/*",
      "src/components/accordion.js",
      "src/components/mobile-menu.js",
      "src/components/modal.js",
      "src/components/navigation-primary.js",
      "src/components/off-canvas.js",
      "src/components/skip-link-focus-fix.js",
      "src/components/table.js",
      "src/components/video.js",
      "src/components/window-ready.js",
      "src/index.js",
      "src/js/babel-polyfill.min.js",
      "tailwind.config.js",
      "vendor/**/*"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-wordpress/scss",
    "rules": {
      "at-rule-no-unknown": null,
      "block-no-empty": null,
      "font-family-no-duplicate-names": null,
      "font-family-no-missing-generic-family-keyword": null,
      "max-line-length": null,
      "no-descending-specificity": null,
      "no-duplicate-selectors": null,
      "scss/at-rule-no-unknown": true
    },
    "ignoreFiles": [
      ".git*",
      "!.*.js",
      "**/*.js",
      "**/*.json",
      "**/*.jsx",
      "**/*.lock",
      "**/*.php",
      "**/*.png",
      "**/*.svg",
      "**/*.ts",
      "**/*.tsx",
      "build/**/*",
      "index.css",
      "node_modules/**/*",
      "src/scss/base/_globals.scss",
      "src/scss/index.scss",
      "src/scss/modules/_forms.scss",
      "src/scss/modules/_menus.scss",
      "src/scss/modules/_mobile-menus.scss",
      "src/scss/modules/_off-canvas.scss",
      "src/scss/modules/_posts.scss",
      "src/scss/modules/_tables.scss",
      "src/scss/views/_sidebar-right.scss",
      "vendor/**/*"
    ]
  }
}
